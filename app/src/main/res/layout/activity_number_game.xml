<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.NumberGameActivity">

    <RelativeLayout
        android:id="@+id/activity_number_game_first_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:id="@+id/activity_number_game_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:background="#8e24aa"
                android:columnCount="3">

                <com.amir.alzheimer.infrastructure.AlzhimerTextView
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:background="@drawable/transparent"
                    android:gravity="center"
                    android:padding="14dp"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <com.amir.alzheimer.infrastructure.AlzhimerTextView
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:background="@drawable/transparent"
                    android:gravity="center"
                    android:padding="14dp"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <com.amir.alzheimer.infrastructure.AlzhimerTextView
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:background="@drawable/transparent"
                    android:gravity="center"
                    android:padding="14dp"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <com.amir.alzheimer.infrastructure.AlzhimerTextView
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:background="@drawable/transparent"
                    android:gravity="center"
                    android:padding="14dp"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <com.amir.alzheimer.infrastructure.AlzhimerTextView
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:background="@drawable/transparent"
                    android:gravity="center"
                    android:padding="14dp"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <com.amir.alzheimer.infrastructure.AlzhimerTextView
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:background="@drawable/transparent"
                    android:gravity="center"
                    android:padding="14dp"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <com.amir.alzheimer.infrastructure.AlzhimerTextView
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:background="@drawable/transparent"
                    android:gravity="center"
                    android:padding="14dp"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <com.amir.alzheimer.infrastructure.AlzhimerTextView
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:background="@drawable/transparent"
                    android:gravity="center"
                    android:padding="14dp"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <com.amir.alzheimer.infrastructure.AlzhimerTextView
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:background="@drawable/transparent"
                    android:gravity="center"
                    android:padding="14dp"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

            </GridLayout>

            <com.amir.alzheimer.infrastructure.AlzhimerTextView
                android:id="@+id/activity_number_game_hint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="2"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:padding="15dp"
                android:text="Find the missing number, memorise them and hit continue! Numbers are from 1 to 12"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

        <Button
            android:id="@+id/activity_number_game_continue_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            android:background="@color/colorAccent"
            android:elevation="5dp"
            android:padding="15dp"
            android:text="Continue"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_number_game_second_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.amir.alzheimer.infrastructure.AlzhimerTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:padding="15dp"
            android:text="What where the missing numbers!"
            android:textColor="@color/white"
            android:textSize="25sp" />


        <LinearLayout
            android:id="@+id/activity_number_game_result_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="15dp"
            android:background="#8e24aa"
            android:orientation="horizontal"
            android:padding="5dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="center"
                android:maxLines="1"
                android:padding="15dp"
                android:text="1"
                android:textSize="25sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="center"
                android:maxLines="1"
                android:padding="15dp"
                android:text="2"
                android:textSize="25sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="center"
                android:maxLines="1"
                android:padding="15dp"
                android:text="12"
                android:textSize="25sp" />


        </LinearLayout>


        <Button
            android:id="@+id/activity_number_game_continue_done"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            android:background="@color/colorAccent"
            android:elevation="5dp"
            android:padding="15dp"
            android:text="Done"
            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>