<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/duplicate_activity_grid_image_item"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:contentDescription="@string/image"
        android:paddingStart="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="15dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp" />

    <com.amir.alzheimer.infrastructure.views.AlzhimerTextView
        android:id="@+id/duplicate_activity_grid_text_item"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:paddingStart="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="15dp"
        android:textSize="35sp"
        android:textAlignment="center"
        android:paddingEnd="0dp"
        android:paddingRight="0dp" />

    <ImageView
        android:id="@+id/duplicate_activity_grid_image_cover"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:contentDescription="@string/image"
        android:src="@drawable/ic_close" />


</RelativeLayout>