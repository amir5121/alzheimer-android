<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/level"
        layout="@layout/include_score_timer" />

    <com.amir.alzheimer.infrastructure.AlzhimerTextView
        android:id="@+id/activity_duplicate_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/level"
        android:layout_margin="8dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/memorize_these_texts"
        android:textColor="@color/white"
        android:textSize="16sp" />


    <GridLayout
        android:id="@+id/activity_duplicate_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_duplicate_help"
        android:layout_margin="15dp" />

    <!--    <GridView-->
    <!--        android:id="@+id/activity_duplicate_remember_grid"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_below="@id/level"-->
    <!--        android:layout_alignParentStart="true"-->
    <!--        android:layout_alignParentLeft="true"-->
    <!--        android:layout_margin="15dp"-->
    <!--        android:numColumns="2" />-->


    <com.amir.alzheimer.infrastructure.AlzhimerButton
        android:id="@+id/activity_duplicate_button_ready"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:background="#0D47A1"
        android:padding="7dp"
        android:text="@string/ready"
        android:textColor="@color/white"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/activity_duplicate_button_ready"
        android:layout_below="@id/activity_duplicate_help"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/activity_duplicate_list_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:divider="#00000000"
            android:dividerHeight="5dp"
            android:padding="5dp" />

        <ListView
            android:id="@+id/activity_duplicate_list_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:divider="#00000000"
            android:dividerHeight="5dp"
            android:padding="5dp"
            android:visibility="gone" />

    </LinearLayout>


</RelativeLayout>