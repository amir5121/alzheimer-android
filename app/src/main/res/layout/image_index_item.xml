<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <FrameLayout
        android:id="@+id/index_activity_container"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="7dp"
        android:paddingStart="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="15dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp">

        <ImageView
            android:id="@+id/index_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/image" />

        <com.amir.alzheimer.infrastructure.views.AlzhimerTextView
            android:id="@+id/index_text_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textSize="24sp" />

    </FrameLayout>

    <com.amir.alzheimer.infrastructure.views.AlzhimerTextView
        android:id="@+id/index_item_index_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/index_activity_container"
        android:layout_alignStart="@id/index_activity_container"
        android:layout_alignLeft="@id/index_activity_container"
        android:layout_alignEnd="@id/index_activity_container"
        android:layout_alignRight="@id/index_activity_container"
        android:layout_marginTop="5dp"
        android:background="@drawable/card_background_green"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp" />


</RelativeLayout>